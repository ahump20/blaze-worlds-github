# Blaze Intelligence Vision Engine Configuration
# Championship-Level Environment Variables

# Google Cloud Platform
PROJECT_ID=blaze-intelligence-prod
REGION=us-central1
GCS_PROCESSING_BUCKET=blaze-vision-processing

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_WEBHOOK_SECRET=your_webhook_secret

# Firebase/Firestore
FIRESTORE_PROJECT_ID=blaze-intelligence-prod
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=blaze-intelligence-prod.firebaseapp.com
FIREBASE_STORAGE_BUCKET=blaze-intelligence-prod.appspot.com

# PubSub Topics
PUBSUB_TOPIC_BIOMECHANICS=vision-engine-biomechanics
PUBSUB_TOPIC_BEHAVIORAL=vision-engine-behavioral
PUBSUB_TOPIC_SYNTHESIS=vision-engine-synthesis
PUBSUB_TOPIC_COMPLETE=vision-engine-complete

# Redis Cache (for performance optimization)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# API Configuration
API_BASE_URL=https://api.blaze-intelligence.com
API_KEY=your_api_key
API_SECRET=your_api_secret

# MediaPipe Configuration
MEDIAPIPE_MODEL_COMPLEXITY=2
MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.5
MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.5

# Performance Settings
MAX_CONCURRENT_ANALYSES=10
FRAME_BATCH_SIZE=30
MEMORY_THRESHOLD=0.8
CACHE_TTL=3600

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info
ENABLE_METRICS=true

# Feature Flags
ENABLE_ADAPTIVE_SAMPLING=true
ENABLE_KEY_FRAME_DETECTION=true
ENABLE_RESULT_CACHING=true
ENABLE_GPU_ACCELERATION=true

# Sport-Specific Settings
BASEBALL_ENHANCED_PROCESSING=true
FOOTBALL_PLAYER_TRACKING=true
BASKETBALL_COURT_TRACKING=true

# Cost Optimization
PROCESSING_TIER=premium  # premium | standard | economy
SELECTIVE_PROCESSING=true
ARCHIVE_AFTER_DAYS=30